
@{
    ViewBag.Title = "Index";
}


<div class="container-fluid">
    <div class="row">
        <div class="column">
            @for (int i = 0; i < Model.Count; i += 3)
            {
                <img src="@Url.Content(Model[i].Path)" />
            }
        </div>
        <div class="column">
            @for (int i = 1; i < Model.Count; i += 3)
            {
                <img src="@Url.Content(Model[i].Path)" />
            }
        </div>
        <div class="column">
            @for (int i = 2; i < Model.Count; i += 3)
            {
                <img src="@Url.Content(Model[i].Path)" />
            }
        </div>
    </div>
</div>
<style>
    .row {
        display: flex;
        flex-wrap: wrap;
        width: 100%;
    }

        .row .column {
            flex: 33.3%;
            width: auto;
            overflow: hidden;
            padding: 0 4px;
            height: 100%;
        }

            .row .column img {
                margin-top: 2%;
                width: 100%;
                height: 100%;
            }

    @@media only screen and (max-width: 800px) {
        .row .column {
            flex: 50%;
        }
    }

    @@media only screen and (max-width: 600px) {
        .row .column {
            flex: 100%;
        }
    }
</style>